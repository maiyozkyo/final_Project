<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Product Page - Admin HTML Template</title>
  {{> linkAdmin}}
</head>

<body id="reportsPage">
  {{> headerAdmin}}
  <div class="container mt-5">
    <div class="row tm-content-row">
      <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
        <div class="tm-bg-primary-dark tm-block tm-block-products">
          <div class="tm-product-table-container">
            <table class="table table-hover tm-table-small tm-product-table">
              <thead>
                <tr>
                  <th scope="col">&nbsp;</th>
                  <th scope="col">PRODUCT NAME</th>
                  <th scope="col">Price</th>
                  <th scope="col">IN STOCK</th>
                  <th scope="col">EXPIRE DATE</th>
                  <th scope="col">&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                {{#products}}
                <tr>
                  <th scope="row"><input type="checkbox" checked/></th>
                  <td class="tm-product-name" id={{ id }} name="id">{{ product_name }}</td>
                  <td>{{ price }}</td>
                  <td>{{ in_stock }}</td>
                  <td>{{ import_date }}</td>
                  <td>
                    <button class="tm-product-delete-link" form="delete_form" name='prod_id' value={{id}} type="submit"
                      style='border:none;'>
                      <i class="far fa-trash-alt tm-product-delete-icon"></i>
                    </button>
                  </td>
                </tr>
                {{/products}}
              </tbody>
            </table>
          </div>
          <!-- table container -->
          <a href="/admin/products/add" class="btn btn-primary btn-block text-uppercase mb-3">Add new product</a>
          <form action="" id="delete_form" method="post">
            <button class="btn btn-primary btn-block text-uppercase"> Delete selected products </button>
          </form>
        </div>
      </div>
      <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 tm-block-col">
        <div class="tm-bg-primary-dark tm-block tm-block-product-categories">
          <h2 class="tm-block-title">Product Categories</h2>
          <div class="tm-product-table-container">
            <table class="table tm-table-small tm-product-table">
              <tbody>
                {{#types}}
                <tr>
                  <td>{{type_name}}</td>
                  <td class="text-center">
                    <a href="/admin/products/category/{{type_name}}" class="tm-product-delete-link">
                      <i class="far fa-trash-alt tm-product-delete-icon"></i>
                    </a>
                  </td>
                </tr>
                {{/types}}
              </tbody>
            </table>
          </div>
          <!-- table container -->
          <form action="/admin/products/category/" method="get">
            <input style="width: 100%" type="text" placeholder="Category Name" id="new-Category" name="type_name">
            <button class="btn btn-primary btn-block text-uppercase mb-3">
              Add new category
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  {{> footerAdmin}}
  {{> scriptAdmin}}
  <script>
    $('.fa-shopping-cart').parent().addClass('active');
    $(function () {
      $(".tm-product-name").on("click", function () {
        window.location.href = "/admin/products/edit/" + $(".tm-product-name").attr("id");
      });
    });
  </script>

</body>

</html>