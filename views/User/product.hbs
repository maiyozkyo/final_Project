<!DOCTYPE html>
<html>

<head>
  <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <link rel="icon" href="/img/fevicon.png" type="image/gif" />
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />

  <title>TechHub</title>
  {{> link}}

</head>

<body class="sub_page">

  {{> header}}

  <!-- product section -->
  <section class="product_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>
          Our Products
        </h2>
      </div>
      <div class="row productList">
        {{#prods}}
        <div class="col-sm-6 col-lg-4">
          <div class="box">
            <div class="img-box">
              <img id={{id}} src={{prod_img}} alt="" name={{product_name}}>
              <button class="add_cart_btn" value={{id}}>
                <span>
                  Add To Cart
                </span>
              </button>
              <a href="detail/{{id}}" class="detail_btn">
                <span>
                  Detail
                </span>
              </a>
            </div>
            <div class="detail-box">
              <h5 name={{prod_name}} class="product-name">
                {{product_name}}
              </h5>
              <div class="product_info">
                <h5 id="price_{{id}}" value={{price}} name={{prod_price}} >
                  <span>$</span> {{price}}
                </h5>
                <div class="star_container">

                </div>
              </div>
            </div>
          </div>
        </div>
        {{/prods}}
      </div>
      <nav aria-label="Page navigation example">

        <ul class="pagination justify-content-center">
          <li>
            <a class="page-link" id="prev">Previous</a>
          </li>
          {{#each pages}}
          {{#if @first}} <li class="page-item"><a class="page-link pageNumber currPage" value={{.}}>{{.}}</a></li>
          {{else}}
          <li class="page-item"><a class="page-link pageNumber" value={{.}}>{{.}}</a></li>
          {{/if}}
          {{/each}}
          <li>
            <a class="page-link" id="next">Next</a>
          </li>
        </ul>

      </nav>
    </div>
  </section>

  <!-- end product section -->

  {{> footer}}
  {{> script}}
  {{>forFilter}}
  <script>
    $('.star_container').append(`{{{prod_rating}}}`);
    $(function () {
      $('.page-link').on('click', function () {
        $('.page-link').removeClass('currPage')
        $(this).addClass('currPage');
        var page = parseInt($('.currPage').attr('value'));
        if ($(this).attr('id') === 'prev') {
          console.log("prev")
          page--;
        }
        if ($(this).attr('id') === 'next') {
          console.log("next")
          page++;
        }
        console.log(page)
        $.getJSON('/product/page/' + page, function (data) {
          console.log(data)
          $('.productList').empty()
          var i;
          for (i = 0; i < data.length; ++i) {
            var htmlString = '<div class="col-sm-6 col-lg-4">' +
              '<div class="box">' + '<div class="img-box">' + '<img src=' + data[i].prod_img + ' alt="" name={{product_name}}>'
              + `<button class="add_cart_btn" value=${date[i].id}>`
              + '<a href="detail/' + data[i].id + '" class="detail_btn" > <span> Detail </span> </a> </div>'
              + '<div class="detail-box">' + '<h5 name={{prod_name}}>' + data[i].product_name + '</h5>'
              + '<div class="product_info">' + '<h5 name={{prod_price}}>' + '<span>$</span>' + data[i].price + '</h5>'
              + '</div> </div> </div> </div>'
            $('.productList').append(htmlString);
          }
        })
      })
    })
  </script>

  <script>
    //add the cart
    $('.add_cart_btn').on('click', function() {
      let key = $(this).val()
      let img = $(`#${key}`).attr('src');
      let price = $(`#price_${key}`).attr('value')
      
      if (!localStorage.getItem(key)) {
        localStorage.setItem(key, '1 ' + img + ' ' + price);
      }
      else {
        localStorage.setItem(key, +localStorage.getItem(key).split(' ')[0] + 1 + ' ' + img + ' ' + price)
        
      }
      const cart = { ...localStorage };
      let total_items = 0;
      for (item in cart) {
        total_items += +cart[item].split(' ')[0]
      }
      document.querySelector('.fa-shopping-cart').textContent = `\t` + total_items;
    })
  </script>
  {{> updateCart}}

</body>

</html>