<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    {{> link}}
</head>

<body>
    <div class="cart">
        {{> header}}

        <div class="row py-5 px-5">
            <div class="col-8 px-2">
                <div>
                    <p class="float-left" style="font-size:x-large">Giỏ Hàng</p>
                    <p class="float-right btn">xóa tất cả</p>
                </div>
                <div class="row container-fluid custom_nav-container px-3 py-3">
                    <ul class="list-group" style="width: 100%;">
                        
                        
                        
                    </ul>
                </div>
            </div>
            <div class="col-4 px-2">
                <div class="container-fluid custom_nav-container p-3">
                    <div class="navbar-brand"><span>Thanh toán</span></div>
                    <div class="row nav-item">
                        <div class="w-100 px-3">
                            <p class="float-left">Tạm tính</p>
                            <p class="float-right" style="color:#f2b01e;">price</p>
                        </div>
                    </div>
                    <div class="row nav-item">
                        <div class="px-3 w-100">
                            <p class="float-left">Thành tiền</p>
                            <p class="float-right" style="color: #f2b01e;">price</p>
                        </div>
                    </div>
                    <div method="post" href="." class="btn light" type="submit" style="font-size: x-large;">Thanh toán</div>
                </div>
            </div>
        </div>
        {{> footer}}
    </div>
    {{> script}}
    <script>
        const header_height = $('.header_section').height();
        document.querySelector('.cart').style.top = `${header_height}px`;
        const cart_height = $('.cart').height();
        document.querySelector('.info_section').style.top = `${header_height + cart_height}px`;
    </script>

    <script>
        $('.btn-desc').on('click', function() {
            if ($('.quantity-area').val() > 0)
                $('.quantity-area').val($('.quantity-area').val() - 1);
        })

        $('.btn-inc').on('click', function() {
            
            $('.quantity-area').val(+$('.quantity-area').val() + 1);
        })
    </script>

    <script>
        const items = {...localStorage}
        listItems = ``
        for (key in items) {
            quantity = items[key].split(' ')[0]
            img = items[key].split(' ')[1]
            listItems += 
            `
                <li class="list-group-item" id=${key}>                            
                    <div class="row d-flex align-items-center">
                        <div class="col-1">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="inlineCheckbox1"
                                    value="option1">
                            </div>
                        </div>
                        <div class="col-2">
                            <img src=${img} height="64px" />
                        </div>
                        <div class="col-4">
                            <a class="description" href="/product/detail/{{id}}">Description</a>
                        </div>
                        <div class="col-3">
                            <div style="display: inline-flex;">
                                <button class="btn btn-desc">-</button>
                                <input class="quantity-area"  style="text-align:center" min="1" size="1" maxlength="100", step="1" value=${quantity}>
                                <button class="btn btn-inc">+</button>
                            </div>
                        </div>
                        <div class="col-2 price-column" value="{{price}}">
                            {{price}}
                        </div>
                    </div>
                </li>
            `
        }
        document.querySelector('.list-group').innerHTML = listItems
    </script>
    {{> updateCart}}
</body>

</html>